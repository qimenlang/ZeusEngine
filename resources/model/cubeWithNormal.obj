# 立方体顶点（边长为2，中心在原点）
v -1.0 -1.0 1.0  # 前左下 (顶点1)
v 1.0 -1.0 1.0   # 前右下 (顶点2)
v 1.0 1.0 1.0    # 前右上 (顶点3)
v -1.0 1.0 1.0   # 前左上 (顶点4)
v -1.0 -1.0 -1.0 # 后左下 (顶点5)
v 1.0 -1.0 -1.0  # 后右下 (顶点6)
v 1.0 1.0 -1.0   # 后右上 (顶点7)
v -1.0 1.0 -1.0  # 后左上 (顶点8)

# 面法线（6个方向）
vn 0.0 0.0 1.0   # 前面法线 (法线1)
vn 1.0 0.0 0.0   # 右面法线 (法线2)
vn 0.0 0.0 -1.0  # 后面法线 (法线3)
vn -1.0 0.0 0.0  # 左面法线 (法线4)
vn 0.0 1.0 0.0   # 顶面法线 (法线5)
vn 0.0 -1.0 0.0  # 底面法线 (法线6)

# 面定义（格式：f 顶点索引//法线索引）
# 前面（使用法线1）
f 1//1 2//1 3//1
f 1//1 3//1 4//1

# 右面（使用法线2）
f 2//2 6//2 7//2
f 2//2 7//2 3//2

# 后面（使用法线3）
f 6//3 5//3 8//3
f 6//3 8//3 7//3

# 左面（使用法线4）
f 5//4 1//4 4//4
f 5//4 4//4 8//4

# 顶面（使用法线5）
f 4//5 3//5 7//5
f 4//5 7//5 8//5

# 底面（使用法线6）
f 5//6 6//6 2//6
f 5//6 2//6 1//6